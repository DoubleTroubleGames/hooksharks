	vec4 sample = texture(TEXTURE, UV);
	float grey = 0.21 * sample.r + 0.71 * sample.g + 0.07 * sample.b;
    COLOR = vec4(sample.r * (1.0 - grey_factor) + grey * grey_factor, sample.g * (1.0 - grey_factor) + grey * grey_factor, sample.b * (1.0 - grey_factor) + grey * grey_factor, 1.0);
}"

